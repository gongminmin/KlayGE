	# create vcproj.user file for Visual Studio to set debug working directory
	FUNCTION(CREATE_VCPROJ_USERFILE TARGETNAME)
		IF(MSVC)
			SET(SYSTEM_NAME $ENV{USERDOMAIN})
			SET(USER_NAME $ENV{USERNAME})

			IF(MSVC_VERSION GREATER 1500)
				CONFIGURE_FILE(
					${KLAYGE_PROJECT_DIR}/../cmake/VisualStudio2010UserFile.vcxproj.user.in
					${CMAKE_CURRENT_BINARY_DIR}/${TARGETNAME}.vcxproj.user
					@ONLY
				)
			ELSEIF(MSVC_VERSION GREATER 1400)
				CONFIGURE_FILE(
					${KLAYGE_PROJECT_DIR}/../cmake/VisualStudio2008UserFile.vcproj.user.in
					${CMAKE_CURRENT_BINARY_DIR}/${TARGETNAME}.vcproj.${SYSTEM_NAME}.${USER_NAME}.user
					@ONLY
				)
			ELSEIF(MSVC_VERSION GREATER 1300)
				CONFIGURE_FILE(
					${KLAYGE_PROJECT_DIR}/../cmake/VisualStudio2005UserFile.vcproj.user.in
					${CMAKE_CURRENT_BINARY_DIR}/${TARGETNAME}.vcproj.${SYSTEM_NAME}.${USER_NAME}.user
					@ONLY
				)
			ENDIF()
		ENDIF()
	ENDFUNCTION()

#if KLAYGE_D3D11
#if KLAYGE_SHADER_MODEL >= 4
#define INTEGER_SUPPORT 1
#endif
#endif
 
float4 LightIndexedDeferredRenderingPS(float2 tc : TEXCOORD0, float3 view_dir : TEXCOORD1) : SV_Target
{
	float4 lighting = 0;
	int4 light_index = light_index_tex.Sample(point_sampler, tc * tc_to_tile_scale) * 255;

	float4 ndc = g_buffer_tex.Sample(point_sampler, tc);
	view_dir = normalize(view_dir);
	float3 pos_es = view_dir * (depth_tex.Sample(point_sampler, tc).r / view_dir.z);
	float3 normal = GetNormal(ndc);
	float shininess = GetShininess(ndc);
	int light_id = 0;
	int comp = 0;
	int mask = 1;

	if (num_lights[LT_Ambient] > 0)
	{
		float n_dot_l = 0.5f + 0.5f * dot(lights_dir_es[light_id].xyz, normal);
		lighting += CalcColor(n_dot_l, 0, 1, 1, lights_color[light_id], lights_attrib[light_id]);
		++ light_id;

		mask *= 2;
		if (mask >= 256)
		{
			++ comp;
			mask = 1;
		}
	}

	if (num_lights[LT_Sun] > 0)
	{
		float3 shadow = 1;
		if (lights_shadowing_channel[light_id] >= 0)
		{
			shadow = NearestDepthUpsamplingShadow(tc, lights_shadowing_channel[light_id]).xyz;
		}

		float3 dir = lights_dir_es[light_id].xyz;
		float n_dot_l = dot(normal, dir);
		if (n_dot_l > 0)
		{
			float spec = roughness_term(normalize(dir - view_dir), normal, shininess).x;
			lighting += CalcColor(n_dot_l, spec, 1, shadow, lights_color[light_id], lights_attrib[light_id]);
		}

		++ light_id;

		mask *= 2;
		if (mask >= 256)
		{
			++ comp;
			mask = 1;
		}
	}

	{
		for (int i = 0; i < num_lights[LT_Directional]; ++ i, ++ light_id)
		{
			float3 dir = lights_dir_es[light_id].xyz;
			float n_dot_l = dot(normal, dir);
			if (n_dot_l > 0)
			{
				float spec = roughness_term(normalize(dir - view_dir), normal, shininess).x;
				lighting += CalcColor(n_dot_l, spec, 1, 1, lights_color[light_id], lights_attrib[light_id]);
			}

			mask *= 2;
			if (mask >= 256)
			{
				++ comp;
				mask = 1;
			}
		}
	}

	if (any(light_index))
	{
		for (int i = 0; i < num_lights[LT_Point]; ++ i, ++ light_id)
		{
#if INTEGER_SUPPORT
			if (light_index[comp] & mask)
#else
			if ((light_index[comp] / mask) % 2)
#endif
			{
				float3 dir = lights_pos_es[light_id].xyz - pos_es;
				float dist = length(dir);
				if (dist < lights_size[light_id])
				{
					dir /= dist;
					float n_dot_l = dot(normal, dir);
					if (n_dot_l > 0)
					{
						float3 shadow = 1;
						if (lights_shadowing_channel[light_id] >= 0)
						{
							shadow = NearestDepthUpsamplingShadow(tc, lights_shadowing_channel[light_id]).xyz;
						}

						float spec = roughness_term(normalize(dir - view_dir), normal, shininess).x;
						float atten = attenuation_term(lights_pos_es[light_id].xyz, pos_es.xyz, lights_falloff[light_id]);
						lighting += CalcColor(n_dot_l, spec, atten, shadow, lights_color[light_id], lights_attrib[light_id]);
					}
				}
			}

			mask *= 2;
			if (mask >= 256)
			{
				++ comp;
				mask = 1;
			}
		}

		for (i = 0; i < num_lights[LT_Spot]; ++ i, ++ light_id)
		{
#if INTEGER_SUPPORT
			if (light_index[comp] & mask)
#else
			if ((light_index[comp] / mask) % 2)
#endif
			{
				float spot = spot_lighting(lights_pos_es[light_id].xyz, lights_dir_es[light_id].xyz,
					float2(lights_pos_es[light_id].w, lights_dir_es[light_id].w), pos_es.xyz);
				if (spot > 0)
				{
					float3 dir = lights_pos_es[light_id].xyz - pos_es;
					float dist = length(dir);
					if (dist < lights_size[light_id])
					{
						dir /= dist;
						float n_dot_l = dot(normal, dir);
						if (n_dot_l > 0)
						{
							float3 shadow = 1;
							if (lights_shadowing_channel[light_id] >= 0)
							{
								shadow = NearestDepthUpsamplingShadow(tc, lights_shadowing_channel[light_id]).xyz;
							}

							float spec = roughness_term(normalize(dir - view_dir), normal, shininess).x;
							float atten = spot * attenuation_term(lights_pos_es[light_id].xyz, pos_es.xyz, lights_falloff[light_id]);
							lighting += CalcColor(n_dot_l, spec, atten, shadow, lights_color[light_id], lights_attrib[light_id]);
						}
					}
				}
			}

			mask *= 2;
			if (mask >= 256)
			{
				++ comp;
				mask = 1;
			}
		}
	}

	return lighting;
}

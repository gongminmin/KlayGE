	oPos = pos;

	oTexCoord = pos.xy / 2;
	oTexCoord.y *= KLAYGE_FLIPPING;
	oTexCoord += 0.5f;
}

float4 DrawLightIndexPS(float2 tc : TEXCOORD0) : SV_Target
{
	float2 minmax = min_max_depth_tex.Sample(point_sampler, tc).xy;
	float near_plane = minmax.x;
	float far_plane = minmax.y;
	
	float2 tile_bias = tile_scale - int2(tc * light_index_tex_width_height.xy);
	float q = far_plane / (far_plane - near_plane);

	float4 column1 = float4(camera_proj[0][0] * tile_scale.x, 0, tile_bias.x, 0);
	float4 column2 = float4(0, -camera_proj[1][1] * tile_scale.y, tile_bias.y, 0);
	float4 column3 = float4(0, 0, q, -near_plane * q);
	float4 column4 = float4(0, 0, 1, 0);
	float4 planes[6];
	planes[0] = column4 - column1;
	planes[1] = column4 + column1;
	planes[2] = column4 - column2;
	planes[3] = column4 + column2;
	for (int i = 0; i < 4; ++ i)
	{
		planes[i] /= length(planes[i].xyz);
	}
	planes[4] = float4(0.0f, 0.0f, -1.0f, far_plane);
	planes[5] = float4(0.0f, 0.0f, +1.0f, -near_plane);

	float all_light_id[4] = { 0, 0, 0, 0 };
	int light_id = 0;
	int comp = 0;
	int mask = 1;
	int accum = 0;

	{
		light_id = num_lights[LT_Ambient] + num_lights[LT_Sun] + num_lights[LT_Directional];
		for (int i = 0; i < light_id; ++ i)
		{
			mask *= 2;
			if (mask >= 256)
			{
				++ comp;
				mask = 1;
			}
		}
	}
	
	{
		for (int i = 0; i < num_lights[LT_Point]; ++ i, ++ light_id)
		{
			bool overlap = true;
			for (int j = 0; j < 6; ++ j)
			{
				float d = dot(planes[j], float4(lights_pos_es[light_id].xyz, 1));
				overlap = overlap && (d > -lights_size[light_id]);
			}

			if (overlap)
			{
				accum += mask;
			}
			
			mask *= 2;
			if (mask >= 256)
			{
				all_light_id[comp] = (accum + 0.5f) / 255.0f;
				++ comp;
				mask = 1;
				accum = 0;
			}
		}
	}
	
	{
		for (int i = 0; i < num_lights[LT_Spot]; ++ i, ++ light_id)
		{
			bool overlap = true;
			for (int j = 0; j < 6; ++ j)
			{
				float d = dot(planes[j], float4(lights_pos_es[light_id].xyz, 1));
				overlap = overlap && (d > -lights_size[light_id]);
			}

			if (overlap)
			{
				accum += mask;
			}
			
			mask *= 2;
			if (mask >= 256)
			{
				all_light_id[comp] = (accum + 0.5f) / 255.0f;
				++ comp;
				mask = 1;
				accum = 0;
			}
		}
	}

	all_light_id[comp] = (accum + 0.5f) / 255.0f;
	
	return float4(all_light_id);
}

void LightIndexedDeferredRenderingVS(float4 pos : POSITION,
			out float2 oTexCoord : TEXCOORD0,
			out float3 oViewDir : TEXCOORD1,
			out float4 oPos : SV_Position)

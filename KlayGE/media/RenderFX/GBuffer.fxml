}

float4 GBufferRT1PS(float4 texcoord_2xy : TEXCOORD0, float4 ts_to_view0_2z : TEXCOORD1, float3 ts_to_view1 : TEXCOORD2) : SV_Target
{
	return ConstructGBufferRT1(texcoord_2xy, ts_to_view0_2z, ts_to_view1);
